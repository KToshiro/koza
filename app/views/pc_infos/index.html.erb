    <h1>Computer Tecnology News</h1>
    <hr>

<table>
  <thead>
    <tr>
      <th>Picture　　　</th>
      <th>Title　　　</th>
      <th>Description　　　</th>

      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pc_infos.each do |pc_info| %>
      <tr>
        <td><%= image_tag(pc_info.picture_url, width: 80) if pc_info.picture.present? %>　　　</td>
        <td><%= pc_info.title %>　　　</td>
        <td><%= pc_info.description %>　　　</td>

        <td><%= link_to pc_info.url, pc_info.url %>　　　</td>

        <td><%= link_to 'Show', pc_info %>　</td>
        <td><%= link_to 'Edit', edit_pc_info_path(pc_info) %>　</td>
        <td><%= link_to 'Destroy', pc_info, method: :delete, data: { confirm: 'Are you sure?' } %>　</td>
      </tr>
    <% end %>
  </tbody>
</table>

